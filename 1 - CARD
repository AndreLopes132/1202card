# =====================
# CRIAÇÃO DE CARTAS
# =====================
def criar_cartas_A():
    cartas = []

    for carta_base in BASE_A:
        carta = {
            "id": str(uuid.uuid4()),
            "tipo": "A",
            "nome": carta_base["nome"],
            "descricao": carta_base["descricao"],
            "imagem": carta_base["imagem"]
        }

        cartas.append(carta)

    random.shuffle(cartas)
    return cartas




def criar_cartas_B():
    cartas = {}

    for classe, lista_cartas in BASE_B.items():
        cartas[classe] = []

        for carta_base in lista_cartas:
            carta = {
                "id": str(uuid.uuid4()),
                "tipo": "B",
                "classe": classe,
                "nome": carta_base["nome"],
                "descricao": carta_base["descricao"],
                "imagem": carta_base["imagem"]
            }

            cartas[classe].append(carta)

        random.shuffle(cartas[classe])

    return cartas


# =====================
# ESTADO
# =====================
if "deck_A" not in st.session_state:
    st.session_state.deck_A = criar_cartas_A()

if "deck_B" not in st.session_state:
    st.session_state.deck_B = criar_cartas_B()

if "descarte_A" not in st.session_state:
    st.session_state.descarte_A = []

if "descarte_B" not in st.session_state:
    st.session_state.descarte_B = {c: [] for c in CLASSES}

if "mao" not in st.session_state:
    st.session_state.mao = {"A": [], "B": []}

# =====================
# FUNÇÕES DE COMPRA
# =====================
def comprar_A():
    if not st.session_state.deck_A:
        st.session_state.deck_A = st.session_state.descarte_A.copy()
        st.session_state.descarte_A.clear()
        random.shuffle(st.session_state.deck_A)
    return st.session_state.deck_A.pop() if st.session_state.deck_A else None

def comprar_B(classe):
    if not st.session_state.deck_B[classe]:
        st.session_state.deck_B[classe] = st.session_state.descarte_B[classe].copy()
        st.session_state.descarte_B[classe].clear()
        random.shuffle(st.session_state.deck_B[classe])
    return st.session_state.deck_B[classe].pop() if st.session_state.deck_B[classe] else None

def repor_mao_A():
    while len([
        c for c in st.session_state.mao["A"]
        if not c.get("extra") and not c.get("bonus")
    ]) < LIMITE["A"]:
        carta = comprar_A()
        if carta:
            st.session_state.mao["A"].append(carta)

def repor_mao_B():
    classe_jogador = st.session_state.classe

    pool = set(POOL_FIXO)
    if classe_jogador not in pool:
        pool.add(classe_jogador)

    # primeiro repõe até o limite normal
    while len([
        c for c in st.session_state.mao["B"]
        if not c.get("extra") and not c.get("bonus")
    ]) < LIMITE["B"]:

        classe = random.choice(list(pool))
        carta = comprar_B(classe)
        if carta:
            st.session_state.mao["B"].append(carta)

    # depois garante que existe pelo menos 1 da classe
    tem_classe = any(
        c["classe"] == classe_jogador
        and not c.get("extra")
        and not c.get("bonus")
        for c in st.session_state.mao["B"]
    )

    if not tem_classe:
        carta = comprar_B(classe_jogador)
        if carta:
            # remove uma carta aleatória normal para manter limite
            for c in st.session_state.mao["B"]:
                if not c.get("extra") and not c.get("bonus"):
                    st.session_state.mao["B"].remove(c)
                    st.session_state.descarte_B[c["classe"]].append(c)
                    break

            st.session_state.mao["B"].append(carta)


def repor_uma_A():
    carta = comprar_A()
    if carta:
        st.session_state.mao["A"].append(carta)


def repor_uma_B(carta_descartada):
    classe_jogador = st.session_state.classe

    # Se descartou carta da própria classe → repor da mesma classe
    if carta_descartada["classe"] == classe_jogador:
        carta = comprar_B(classe_jogador)
        if carta:
            st.session_state.mao["B"].append(carta)
        return

    # Caso contrário → repor aleatória do pool
    pool = set(POOL_FIXO)
    if classe_jogador not in pool:
        pool.add(classe_jogador)

    classe = random.choice(list(pool))
    carta = comprar_B(classe)

    if carta:
        st.session_state.mao["B"].append(carta)




def adicionar_carta_extra(tipo):
    if tipo == "A":
        carta = comprar_A()
        if carta:
            carta["extra"] = True
            st.session_state.mao["A"].append(carta)
    else:
        carta = comprar_B(st.session_state.classe)
        if carta:
            carta["extra"] = True
            st.session_state.mao["B"].append(carta)

def adicionar_carta_bonus(tipo):
    if tipo == "A":
        carta = comprar_A()
        if carta:
            carta["bonus"] = True
            st.session_state.mao["A"].append(carta)
    else:
        carta = comprar_B(st.session_state.classe)
        if carta:
            carta["bonus"] = True
            st.session_state.mao["B"].append(carta)



# =====================
# SETUP INICIAL
# =====================
if "iniciado" not in st.session_state:

    st.title("Configuração Inicial")

    nivel = st.number_input("Nível", 1, NIVEL_MAX, 1)
    vida = st.number_input("Vida Máxima", 1, value=10)

    classe_escolhida = st.radio(
        "Escolha sua Classe:",
        options=list(CLASSES.keys()),
        format_func=lambda x: f"{x} — {CLASSES[x]}"
    )

    if st.button("Iniciar Jogo"):
        st.session_state.nivel = nivel
        st.session_state.vida_max = vida
        st.session_state.vida_atual = vida
        st.session_state.vida_bonus = 0
        st.session_state.classe = classe_escolhida
        st.session_state.possui_bonus = False
        st.session_state.bonus_tipo = None
        repor_mao_A()
        repor_mao_B()
        st.session_state.iniciado = True
        st.rerun()

# =====================
# JOGO
# =====================
else:

    st.title(f"Classe: {CLASSES[st.session_state.classe]}")

    # =====================
    # VIDA
    # =====================
    st.subheader("Vida")

    # Vida principal
    st.session_state.vida_atual = st.number_input(
        "Vida Atual",
        min_value=0,
        max_value=st.session_state.vida_max + st.session_state.vida_bonus,
        value=st.session_state.vida_atual,
        step=1,
        format="%d"
    )
    st.write(f"Vida Máxima: {st.session_state.vida_max}")

    # Vida bônus (sem máximo)
    st.subheader("Vida Bônus")
    st.session_state.vida_bonus = st.number_input(
        "Vida Bônus",
        min_value=0,
        value=st.session_state.vida_bonus,
        step=1,
        format="%d"
    )

    st.divider()



    # AÇÕES ESPECIAIS
    st.subheader("Ações Especiais")
    col1, col2 = st.columns(2)

    # EXTRA (agora só botão)
    with col1:
        if st.button("Adicionar Carta Extra"):
            st.session_state.mostrando_extra = True

        if st.session_state.get("mostrando_extra"):
            colA, colB = st.columns(2)

            if colA.button("Movimento"):
                adicionar_carta_extra("A")
                st.session_state.mostrando_extra = False
                st.rerun()

            if colB.button("Ação"):
                adicionar_carta_extra("B")
                st.session_state.mostrando_extra = False
                st.rerun()

    # BONUS (agora só botão)
    with col2:
        if not st.session_state.possui_bonus:

            if st.button("Adicionar Carta Bônus"):
                st.session_state.mostrando_bonus = True

            if st.session_state.get("mostrando_bonus"):
                colA, colB = st.columns(2)

                if colA.button("Movimento"):
                    adicionar_carta_bonus("A")
                    st.session_state.possui_bonus = True
                    st.session_state.bonus_tipo = "A"
                    st.session_state.mostrando_bonus = False
                    st.rerun()

                if colB.button("Ação"):
                    adicionar_carta_bonus("B")
                    st.session_state.possui_bonus = True
                    st.session_state.bonus_tipo = "B"
                    st.session_state.mostrando_bonus = False
                    st.rerun()

        else:
            st.success("Carta Bônus ativa")

            if st.button("Remover Carta Bônus"):
                st.session_state.possui_bonus = False
                st.session_state.bonus_tipo = None

                for tipo in ["A", "B"]:
                    st.session_state.mao[tipo] = [
                        c for c in st.session_state.mao[tipo]
                        if not c.get("bonus")
                    ]

                st.rerun()

    st.divider()

    # =====================
    # RENDER
    # =====================
    def render(tipo):

        titulo = "Cartas de Movimento" if tipo == "A" else "Cartas de Ação"
        st.subheader(titulo)

        if not st.session_state.mao[tipo]:
            st.info("Nenhuma carta disponível.")
            return

        cols = st.columns(len(st.session_state.mao[tipo]))

        for carta, col in zip(st.session_state.mao[tipo], cols):
            with col:

                key = carta["id"]

                if key not in st.session_state:
                    st.session_state[key] = False

                nome = carta["nome"]

                if carta.get("extra"):
                    nome = f"✨ EXTRA — {nome}"

                if carta.get("bonus"):
                    nome = f"🔷 BÔNUS — {nome}"

                if st.button(nome, key=f"btn_{key}", use_container_width=True):
                    st.session_state[key] = not st.session_state[key]

                st.image(carta["imagem"], use_container_width=True)

                if st.session_state[key]:

                    st.write(carta["descricao"].replace(
                        "NIVEL", str(st.session_state.nivel)
                    ))

                    col1, col2 = st.columns(2)

                    # JOGAR (não repõe)
                    # JOGAR
                    with col1:
                        if st.button("▶ Jogar", key=f"use_{key}"):

                            st.session_state.mao[tipo].remove(carta)

                            if tipo == "A":
                                st.session_state.descarte_A.append(carta)
                            else:
                                st.session_state.descarte_B[carta["classe"]].append(carta)

                            st.session_state[key] = False
                            st.rerun()

                    # DESCARTAR (repõe apenas 1 carta normal)
                    with col2:
                        if st.button("🗑 Descartar", key=f"discard_{key}"):

                            st.session_state.mao[tipo].remove(carta)

                            if tipo == "A":
                                st.session_state.descarte_A.append(carta)

                                if not carta.get("extra") and not carta.get("bonus"):
                                    repor_uma_A()

                            else:

                                st.session_state.descarte_B[carta["classe"]].append(carta)

                                if not carta.get("extra") and not carta.get("bonus"):
                                    repor_uma_B(carta)

                            st.session_state[key] = False
                            st.rerun()

    render("A")
    st.divider()
    render("B")

    st.divider()

    # 🔄 NOVO TURNO AGORA FICA NO FINAL
    if st.button("🔄 Iniciar Novo Turno"):

        repor_mao_A()
        repor_mao_B()

        # Repor bônus se necessário
        if st.session_state.possui_bonus:
            tipo = st.session_state.bonus_tipo

            ja_tem_bonus = any(
                c.get("bonus") for c in st.session_state.mao[tipo]
            )

            if not ja_tem_bonus:
                adicionar_carta_bonus(tipo)

        st.rerun()
        

